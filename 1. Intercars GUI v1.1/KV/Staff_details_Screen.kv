<MDTextFieldRound>
    normal_color: app.theme_cls.accent_color
    color_active:  0, 1, 0, 1

<Staff_details_Screen>:
    Screen:
        BoxLayout:
            orientation: "vertical"
            size_hint: (0.6,0.7)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba:(30/255, 31/255, 30/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            padding: 19
            spacing: 19

            MDLabel:
                id: Staff_lbl
                text: "Staff Details"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            ScrollView:
                size_hint_y: 0.75
                do_scroll_x: False
                do_scroll_y: True
                pos_hint: {"center_x": 0.8, "center_y": 0.5}
                GridLayout:
                    cols: 2
                    padding: 10
                    spacing: 10
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {"center_x": 0.6, "center_y": 0.7}
                    row_force_default: True
                    row_default_height: 40


                    MDLabel:
                        id: Addr1_lbl
                        text: "House number"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDTextFieldRound:
                        id: Addr1_textf
                        hint_text: "House number"
                        icon_right: "account"
                        size_hint_x: None
                        width: 200
                        font_size: 14

                    MDLabel:
