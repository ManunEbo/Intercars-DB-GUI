                    MDLabel:
                        id: age_group_label
                        text: "Age group"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    Spinner:
                        id: staff_agegroup_spnr
                        size_hint: None, None
                        size: (220,30)
                        text: "Age-group"
                        halign: 'left'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        canvas.before:
                            Color:
                                rgba:(125/255,185/255,219/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [19]
                        values: ["17 to 20","21 to 24", "25 to 29", "30 to 34", "35 to 39", "40 to 49", "50 to 59", "60+"]
                        on_text: root.staff_agegroup_clicked(staff_agegroup_spnr.text)

        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"center_x": 0.4}
            padding: 15
            elevation: 10
            on_release:
                root.chng_Screen("staff_screen")

        MDRoundFlatButton:
            text: "Submit"
            font_size: 12
            pos_hint: {"center_x": 0.6}
            padding: 15
            elevation: 10
            on_release:
                root.Submit_Staff()

            Widget:
                size_hint_y: None
                height: 30


            Widget:
