<Auction_invoice_statsScreen>
    Screen:
        TabbedPanel:
            do_default_tab: False
            tab_width: self.parent.width / 10

            TabbedPanelItem:
                text: "All of the Options"
                id: tab1_1

                Screen:
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: (0.6,0.7)
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        canvas.before:
                            Color:
                                rgba:(30/255, 31/255, 30/255,1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        padding: 19
                        spacing: 19

                        MDLabel:
                            id: Auction_stats_lbl
                            markup: True
                            text: "[color=#76FF03][b]Auction Statistics[/b][/color]"
                            font_size: 40
                            halign: 'center'
                            size_hint_y: None
                            height: self.texture_size[1]

                        ScrollView:
                            size_hint_y: 0.75
                            do_scroll_x: False
                            do_scroll_y: True
                            pos_hint: {"center_x": 0.8, "center_y": 0.5}
                            GridLayout:
                                cols: 2
                                padding: 10
                                spacing: 10
                                size_hint_y: None
                                height: self.minimum_height
                                pos_hint: {"center_x": 0.6, "center_y": 0.7}
                                row_force_default: True
                                row_default_height: 40

                                MDLabel:
                                    id: V5C_stats_lbl
                                    markup: True
                                    text: "[color=#76FF03][b]Auction invoice\ndata & statistics[/b][/color]"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                Widget:

                                MDLabel:
                                    id: Auction_lbl
                                    text: "Auction invoice all inhouse-data"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Auction invoice data"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Auction_invoice_all_inhouse_data()

                                MDLabel:
                                    id: Auction_invoice_by_auction_lbl
                                    text: "Auction invoice summary\ninhouse-data by auction"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Auction invoice by auction"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Auction_invoice_by_auction()

                                MDLabel:
                                    id: Auction_summary_monthly_lbl
                                    text: "Auction invoice summary by month"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Auction invoice monthly"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Auction_summary_monthly()

                                MDLabel:
                                    id: V5C_stats_lbl
                                    markup: True
                                    text: "[color=#76FF03][b]Fiscal auction invoice\ndata & statistics[/b][/color]"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                Widget:

                                MDLabel:
                                    id: Fiscal_Auction_lbl
                                    text: "Fiscal auction invoice inhouse-data"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Fiscal auction invoice data"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Fiscal_auction_invoice_inhouse_data()

                                MDLabel:
                                    id: Fiscal_Auction__invoice_by_auctionlbl
                                    text: "Fiscal auction invoice inhouse-data\nSummarised by auction"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Fiscal auction invoice data"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Fiscal_auction_invoice_by_auction()


                                MDLabel:
                                    id: Fiscal_Auction__invoice_by_Monthlbl
                                    text: "Fiscal auction invoice\nSummarised by year & month"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Fiscal auction invoice\nBy year & month"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Fiscal_auction_invoice_by_year_and_month()

                    Widget:
                    Widget:
                    Widget:
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: (0.6,0.1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.1}
                        canvas.before:
                            Color:
                                rgba:(30/255, 31/255, 30/255,1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        padding: 19
                        spacing: 19
                        GridLayout:
                            cols: 2
                            padding: 10
                            spacing: 10
                            size_hint_y: None
                            height: self.minimum_height
                            pos_hint: {"center_x": 0.8, "center_y": 0.3}
                            row_force_default: True
                            row_default_height: 40

                            MDLabel:
                                id: MenuScreen_lbl
                                text: "Go back to Menu Screen"
                                font_size: 14
                                halign: 'left'
                                size_hint_y: None
                                height: self.texture_size[1]
                                size_hint_x: None
                                width: 200

                            MDRoundFlatButton:
                                text: "Menu screen"
                                font_size: 12
                                pos_hint: {"center_x": 0.5}
                                on_release:
                                    root.chng_Screen("menuscreen")


            TabbedPanelItem:
                text: "Data"
                id: Data_id

