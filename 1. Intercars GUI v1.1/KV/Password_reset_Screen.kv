<MDTextFieldRound>
    normal_color: app.theme_cls.accent_color
    color_active:  0, 1, 0, 1

<Password_reset_Screen>:
    Screen:
        BoxLayout:
            orientation: "vertical"
            size_hint: (0.6,0.7)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba:(30/255, 31/255, 30/255,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            padding: 19
            spacing: 19

            MDLabel:
                id: Password_reset
                text: "Password reset"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            ScrollView:
                size_hint_y: 0.75
                do_scroll_x: False
                do_scroll_y: True
                pos_hint: {"center_x": 0.8, "center_y": 0.5}
                GridLayout:
                    cols: 2
                    padding: 10
                    spacing: 10
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {"center_x": 0.6, "center_y": 0.7}
                    row_force_default: True
                    row_default_height: 40

                    MDLabel:
                        id: Staff_name
                        text: "Select Staff name"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200


                    Spinner:
                        id: Staff_select_spin_id
                        size_hint: None, None
                        size: (240,30)
                        text: "Select"
                        halign: 'center'
                        background_normal: ''
                        background_color: (0,0,0,0)
                        canvas.before:
                            Color:
                                rgba:(125/255,185/255,219/255,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [19]
                        values: root.staff_list
                        on_text: root.selected_staff(Staff_select_spin_id.text)

                    MDLabel:
                        id: Previous_passwd_lbl
                        text: "Previous Password"
                        font_size: 14
                        halign: 'left'
                        markup: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDTextFieldRound:
                        id: Previous_passwd_textf
                        hint_text: "Previous Password"
                        icon_right: "eye-off"
                        size_hint_x: None
                        width: 200
                        font_size: 14
                        password: True

                    MDLabel:
                        id: New_passwd_lbl
                        text: "New Password"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDTextFieldRound:
                        id: New_passwd_textf
                        hint_text: "New password"
                        icon_right: "eye-off"
                        size_hint_x: None
                        width: 200
                        font_size: 14
                        password: True

                    MDLabel:
                        id: Confirm_new_passwd_lbl
                        text: "Confirm new password"
                        font_size: 14
                        halign: 'left'
                        markup: True
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDTextFieldRound:
                        id: Confirm_new_passwd_textf
                        hint_text: "Confirm new password"
                        icon_right: "eye-off"
                        size_hint_x: None
                        width: 200
                        font_size: 14
                        password: True

                    MDLabel:
                        id: New_secret_key_lbl
                        text: "New secret key"
                        font_size: 14
                        halign: 'left'
                        size_hint_y: None
                        height: self.texture_size[1]
                        size_hint_x: None
                        width: 200

                    MDTextFieldRound:
                        id: New_secret_key_textf
                        hint_text: "New secret key"
                        icon_right: "eye-off"
                        size_hint_x: None
                        width: 200
                        font_size: 14
                        password: True

        MDRoundFlatButton:
            text: "Back"
            font_size: 12
            pos_hint: {"center_x": 0.3}
            on_release:
                root.chng_Screen("staff_screen")

        MDRoundFlatButton:
            text: "Reset password"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: root.Reset_password()

        MDRoundFlatButton:
            text: "Clear"
            font_size: 12
            pos_hint: {"center_x": 0.7}
            on_press: root.clear()
