<MenuScreen>:
    Screen:
        MDCard:
            size_hint: None, None
            size: 300, 500
            pos_hint: {"center_x": 0.3, "center_y": 0.5}
            elevation: 10
            padding: 15
            spacing: 15

            orientation: "vertical"

            MDLabel:
                id: welcome_label
                markup: True
                text: "[color=#76FF03][b]Analytics[/b][/color]"
                font_size: 40
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15

            MDRoundFlatButton:
                text: "Auctions"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("Auction_stats_screen")

            MDRoundFlatButton:
                text: "Garages"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("Garages_StatsScreen")

            MDRoundFlatButton:
                text: "Op VAT"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("Op_VAT_StatsScreen")

            MDRoundFlatButton:
                text: "Staff"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("Staff_StatsScreen")

            MDRoundFlatButton:
                text: "Vehicle"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("vehicle_stats_screen")

            # Adding an empty widget to push everything up the screen
            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10

        MDCard:
            size_hint: None, None
            size: 300, 500
            pos_hint: {"center_x": 0.7, "center_y": 0.5}
            elevation: 10
            padding: 15
            spacing: 15

            orientation: "vertical"

            MDLabel:
                id: Upload_lbl
                markup: True
                text: "[color=#76FF03][b]Upload[/b][/color]"
                font_size: 40
                halign: 'center'
                markup: True
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15

            MDRoundFlatButton:
                text: "Vehicle"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("vehiclescreen")

            MDRoundFlatButton:
                text: "Customer"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("customerscreen")

            MDRoundFlatButton:
                text: "Staff"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("staff_screen")

            MDRoundFlatButton:
                id: Auction_btn
                text: "Auction"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("auction_menu_screen")

            MDRoundFlatButton:
                text: "Garage"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("garage_screen")

            MDRoundFlatButton:
                text: "Operation"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.chng_Screen("operation_screen")

            # Adding an empty widget to push everything up the screen
            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10

            Widget:
                size_hint_y: None
                height: 10

        MDNavigationLayout:
            ScreenManager:
                id: menu_mnger
                Screen:
                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            title: 'Main menu'
                            anchor_title: "center"
                            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                            elevation: 10

                        Widget:

            MDNavigationDrawer:
                id: nav_drawer
                elevation: 10
                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Uploads'
                        font_style: 'Caption'
                        size_hint_y: None
                        height: self.texture_size[1]

                    ScrollView:
                        MDList:
                            OneLineIconListItem:
                                text: 'Vehicle'
                                IconLeftWidget:
                                    icon: 'car'

                            OneLineIconListItem:
                                text: 'Customer'
                                IconLeftWidget:
                                    icon: 'human-queue'

                            OneLineIconListItem:
                                text: 'Staff'
                                IconLeftWidget:
                                    icon: 'human-capacity-increase'

                            OneLineIconListItem:
                                text: 'Auction'
