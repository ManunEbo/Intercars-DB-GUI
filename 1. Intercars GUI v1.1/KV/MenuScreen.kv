                                    icon: 'cash-multiple'

                            OneLineIconListItem:
                                text: 'Operation'
                                IconLeftWidget:
                                    icon: 'lighthouse-on'

                            MDLabel:
                                text: 'Analytics'
                                font_style: 'Caption'
                                size_hint_y: None
                                height: self.texture_size[1]


                            OneLineIconListItem:
                                text: 'Data'
                                IconLeftWidget:
                                    icon: 'facebook'

                            OneLineIconListItem:
                                text: 'Graph'
