<Op_VAT_StatsScreen>
    Screen:
        TabbedPanel:
            do_default_tab: False
            tab_width: self.parent.width / 10

            TabbedPanelItem:
                text: "All of the Options"
                id: tab1_1

                Screen:
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: (0.6,0.7)
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        canvas.before:
                            Color:
                                rgba:(30/255, 31/255, 30/255,1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        padding: 19
                        spacing: 19

                        MDLabel:
                            id: Op_VAT_stats_lbl
                            markup: True
                            text: "[color=#76FF03][b]Op VAT statistics[/b][/color]"
                            font_size: 40
                            halign: 'center'
                            size_hint_y: None
                            height: self.texture_size[1]

                        ScrollView:
                            size_hint_y: 0.75
                            do_scroll_x: False
                            do_scroll_y: True
                            pos_hint: {"center_x": 0.8, "center_y": 0.5}
                            GridLayout:
                                cols: 2
                                padding: 10
                                spacing: 10
                                size_hint_y: None
                                height: self.minimum_height
                                pos_hint: {"center_x": 0.6, "center_y": 0.7}
                                row_force_default: True
                                row_default_height: 40

                                MDLabel:
                                    id: Op_VAT_stats_lbl1
                                    markup: True
                                    text: "[color=#76FF03][b]Op VAT data[/b][/color]"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                Widget:

                                MDLabel:
                                    id: Op_vat_all_lbl
                                    text: "Op VAT all in-house data"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Op VAT all data"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Op_VAT_all_in_house_data()

                                MDLabel:
                                    id: Fiscal_Op_vat_all_lbl
                                    text: "Fiscal Op VAT data"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Fiscal Op VAT"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Fiscal_Op_VAT_in_house_data()

                                MDLabel:
                                    id: Fiscal_Op_vat_totals_lbl
                                    text: "Fiscal Op VAT totals: Net, VAT and Gross"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Fiscal Op VAT totals"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Fiscal_Op_VAT_stats_total()

                                MDLabel:
                                    id: Fiscal_Op_vat_extract_lbl
                                    text: "Download Fiscal Op VAT to PDF"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Fiscal Op VAT PDF"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Fiscal_Op_VAT_stats_PDF()

                                MDLabel:
                                    id: Prev_Fiscal_Op_VAT_stats_lbl1
                                    markup: True
                                    text: "[color=#76FF03][b]Previous fiscal year Op VAT\ndata[/b][/color]"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                Widget:

                                # MDLabel:
                                #     id: Prev_Fiscal_Op_vat_all_lbl
                                #     text: "Previous fiscal year Op VAT data"
                                #     font_size: 14
                                #     halign: 'left'
                                #     size_hint_y: None
                                #     height: self.texture_size[1]
                                #     size_hint_x: None
                                #     width: 200
                                #
                                # MDRoundFlatButton:
                                #     text: "Previous Fiscal Op VAT"
                                #     font_size: 12
                                #     pos_hint: {"center_x": 0.5}
                                #     on_release:
                                #         root.Previous_Fiscal_Op_VAT_in_house_data()

                                MDLabel:
                                    id: Prev_Fiscal_Op_vat_Extract_lbl
                                    text: "Download previous Fiscal year Op VAT to PDF"
                                    font_size: 14
                                    halign: 'left'
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    size_hint_x: None
                                    width: 200

                                MDRoundFlatButton:
                                    text: "Previous Fiscal Op VAT PDF"
                                    font_size: 12
                                    pos_hint: {"center_x": 0.5}
                                    on_release:
                                        root.Previous_Fiscal_Op_VAT_stats_PDF()

                    Widget:
                    Widget:
                    Widget:
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: (0.6,0.1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.1}
                        canvas.before:
                            Color:
                                rgba:(30/255, 31/255, 30/255,1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        padding: 19
                        spacing: 19
                        GridLayout:
                            cols: 2
                            padding: 10
                            spacing: 10
                            size_hint_y: None
                            height: self.minimum_height
                            pos_hint: {"center_x": 0.8, "center_y": 0.3}
                            row_force_default: True
                            row_default_height: 40

                            MDLabel:
                                id: MenuScreen_lbl
                                text: "Go back to Menu Screen"
                                font_size: 14
                                halign: 'left'
                                size_hint_y: None
                                height: self.texture_size[1]
                                size_hint_x: None
                                width: 200

                            MDRoundFlatButton:
                                text: "Menu screen"
                                font_size: 12
                                pos_hint: {"center_x": 0.5}
                                on_release:
                                    root.chng_Screen("menuscreen")

            TabbedPanelItem:
                text: "Data"
                id: Data_id

            TabbedPanelItem:
